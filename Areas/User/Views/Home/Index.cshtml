@model IEnumerable<Book>
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card borderborder-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.FrontBookUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="cardcard-title h5 text-dark opacity-75 text-bg-dangertext-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">from <b>@product.Category.Name</b></p>
                            </div>
                            @* <div class="pl-1">
                                <p class="text-dark opacity-75 text-uppercase text-center mb-0" style="font-size: 12px"> List Price: <span class="text-decoration-line-through">@product.Price.ToString("c")</span></p>
                            </div> *@
                            <div class="pl-1">
                                <p class="text-dark opacity-75 text-uppercase text-center">As low as: <span>@product.Price.ToString("c")</span></p>
                            </div>
                        </div>
                        <a asp-action="Details" asp-route-productId="@product.BookID" class="btn btn-primary bg-gradient borderborder-0 form-check-control">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
