@model BookVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            @* nhận các dữ liệu khác nhau *@
            <input asp-for="Book.CategoryID" hidden /> @* ẩn thuộc tính id với người dùng *@
            <input asp-for="Book.SellerID" hidden /> @* ẩn thuộc tính id với người dùng *@
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Book.Title" class="form-control border-0 shadow" />
                    <label asp-for="Book.Title" class="ms-2"></label>
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Book.Author" class="form-control border-0 shadow" />
                    <label asp-for="Book.Author" class="ms-2"></label>
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Book.Description" class="form-control border-0 shadow" />
                    <label asp-for="Book.Description" class="ms-2"></label>
                    <span asp-validation-for="Book.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Book.Price" class="form-control border-0 shadow" />
                    <label asp-for="Book.Price" class="ms-2"></label>
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Book.Condition" class="form-control border-0 shadow">
                        <option value="true">Good Condition</option>
                        <option value="false">Bad Condition</option>
                    </select>
                    <label asp-for="Book.Condition" class="ms-2"></label>
                    <span asp-validation-for="Book.Condition" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=" Book.InStock" class="form-control border-0 shadow" />
                    <label asp-for=" Book.InStock" class="ms-2"></label>
                    <span asp-validation-for=" Book.InStock" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=" Book.FrontBookUrl" class="form-control border-0 shadow" />
                    <label asp-for=" Book.FrontBookUrl" class="ms-2"></label>
                    <span asp-validation-for=" Book.FrontBookUrl" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=" Book.BackBookUrl" class="form-control border-0 shadow" />
                    <label asp-for=" Book.BackBookUrl" class="ms-2"></label>
                    <span asp-validation-for=" Book.BackBookUrl" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Book.CategoryID" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Selected Roles--</option>
                    </select>
                    <label asp-for="Book.CategoryID" class="ms-2"></label>
                    <span asp-validation-for="Book.CategoryID" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Book.SellerID" asp-items="@Model.SellerList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Seller </option>
                    </select>
                    <label asp-for=" Book.SellerID" class="ms-2"></label>
                    <span asp-validation-for=" Book.SellerID" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}