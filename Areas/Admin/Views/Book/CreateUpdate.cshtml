@model BookVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Book.BookID!=0?"Update":"Create") Book</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Book.BookID" hidden />
            <input asp-for="Book.FrontBookUrl" hidden />
            <input asp-for="Book.BackBookUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Title" class="form-control border-0 shadow" />
                            <label asp-for="Book.Title" class="ms-2"></label>
                            <span asp-validation-for="Book.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Author" class="form-control border-0 shadow" />
                            <label asp-for="Book.Author" class="ms-2"></label>
                            <span asp-validation-for="Book.Author" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Description" class="form-control border-0 shadow" />
                            <label asp-for="Book.Description" class="ms-2"></label>
                            <span asp-validation-for="Book.Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Price" class="form-control border-0 shadow" />
                            <label asp-for="Book.Price" class="ms-2"></label>
                            <span asp-validation-for="Book.Price" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="Book.Condition" class="form-control border-0 shadow">
                                <option value="true">Good Condition</option>
                                <option value="false">Bad Condition</option>
                            </select>
                            <label asp-for="Book.Condition" class="ms-2"></label>
                            <span asp-validation-for="Book.Condition" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for=" Book.InStock" class="form-control border-0 shadow" />
                            <label asp-for=" Book.InStock" class="ms-2"></label>
                            <span asp-validation-for=" Book.InStock" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Book.CategoryID" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Book.CategoryID" class="ms-2"></label>
                            <span asp-validation-for="Book.CategoryID" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="frontBookImage" class="form-control border-0 shadow" />
                            <label asp-for="Book.FrontBookUrl" class="ms-2"></label>
                            <img src="@Model.Book.FrontBookUrl" width="100%"
                                 style="border-radius:5px; border:1px solid #bbb9b9" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="BackBookImage" class="form-control border-0 shadow" />
                            <label asp-for="Book.BackBookUrl" class="ms-2"></label>
                            <img src="@Model.Book.BackBookUrl" width="100%"
                                 style="border-radius:5px; border:1px solid #bbb9b9" />
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Book.BookID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
           
        </form>
    </div>  
</div>