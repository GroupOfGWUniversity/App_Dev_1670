@model Book
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="BookID" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" disabled  class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                 
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Condition" disabled class="form-control border-0 shadow" />
                    <label asp-for="Condition" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=" InStock" disabled class="form-control border-0 shadow" />
                    <label asp-for=" InStock" class="ms-2"></label>
                  
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=" FrontBookUrl" disabled class="form-control border-0 shadow" />
                    <label asp-for=" FrontBookUrl" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=" BackBookUrl" disabled class="form-control border-0 shadow" />
                    <label asp-for=" BackBookUrl" class="ms-2"></label>
                    
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>