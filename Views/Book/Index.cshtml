@model List<Book>;
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-black bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Book List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Create new Book
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Condition
                    </th>
                    <th>
                        InStock
                    </th>
                    <th>
                        FontBook
                    </th>
                    <th>
                        BackBook
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model) //hàm for để in ra hết category
                {
                    <tr>
                        <td>
                            @obj.Title
                        </td>
                        <td>
                            @obj.Author
                        </td>
                        <td>
                            @obj.Description
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @if (obj.Condition.HasValue)
                            {
                                <span class="badge bg-success">Good</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Bad</span>
                            }
                        </td>
                        <td>
                            @obj.InStock
                        </td>
                        <td>
                            @obj.FrontBookUrl
                        </td>
                        <td>
                            @obj.BackBookUrl
                        </td>
                        <td class="w-75 btn-group" role="group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-Id="@obj.BookID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-Id="@obj.BookID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
